<!-- TODO: remove the id as soon as we know how to fetch an item by class -->
<form method="post" id="form-temporary" action = "{{form-action}}" class="senape-add-comment">
    <p>
        {{#has-labels}}<label class="senape-label-for-input">{{#i18n.tr}}Name{{/i18n.tr}}{{/has-labels}}</label>
        <input type="text" name="senape-form[name]" title="{{#i18n.tr}}Name (optional){{/i18n.tr}}"{{#has-name}} value="{{name}}"{{/has-name}} placeholder="{{#i18n.tr}}Name{{/i18n.tr}}">
        {{#has-labels}}<label class="senape-label-for-input">{{#i18n.tr}}Email{{/i18n.tr}}{{/has-labels}}</label>
        <input type="text" name="senape-form[email]" title="{{#i18n.tr}}Email (optional){{/i18n.tr}}" {{#has-email}} value="{{email}}"{{/has-email}} placeholder="{{#i18n.tr}}Email{{/i18n.tr}}">
        {{#has-labels}}<label class="senape-label-for-input">{{#i18n.tr}}Website{{/i18n.tr}}{{/has-labels}}</label>
        <input type="text" name="senape-form[website]" title="{{#i18n.tr}}Website (optional){{/i18n.tr}}" {{#has-website}} value="{{website}}"{{/has-website}} placeholder="{{#i18n.tr}}Website{{/i18n.tr}}">
    </p>
    <p>
        {{#has-labels}}<label class="senape-label-for-textarea">{{#i18n.tr}}Comment{{/i18n.tr}}{{/has-labels}}</label>
        <textarea name="senape-form[comment]" title="{{#i18n.tr}}Comment (mandatory){{/i18n.tr}}" placeholder="{{#i18n.tr}}Your comment{{/i18n.tr}}"></textarea>
        <p class="senape-add-comment-formatting">TODO: List the available formatting</p>
    </p>
    <p>
        <label>
            <input type="checkbox" name="senape-form[subscribe]"{{#has-notify}} checked="true"{{/has-notify}}> {{#i18n.tr}}Notify me of replies.{{/i18n.tr}}
        </label>
    </p>
    <p>
        <input type="button" name="senape-form[cancel]" value="{{#i18n.tr}}Cancel{{/i18n.tr}}">
        <input type="submit" name="senape-form[add-comment]" value="{{#i18n.tr}}Post comment{{/i18n.tr}}">
    </p>
    <input type="hidden" name="senape-page-current" value="{{page-current}}">
    <input type="hidden" name="senape-site-current" value="{{site-current}}">
    <input type="hidden" name="senape-comment-last-id" value="{{comment-last-id}}">
    <input type="hidden" name="senape-controller" value="comment">
    <input type="hidden" name="senape-action" value="add">
</form>
